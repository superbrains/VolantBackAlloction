@model BAServices.ViewModels.Facility.FacilityData
@{
    ViewData["Title"] = "Facility Creation";
}

<header class="page-header">
    <h2>Facility Creation</h2>

    <div class="right-wrapper text-end">
        <ol class="breadcrumbs">
            <li>
                <a href="#">
                    <i class="bx bx-home-alt"></i>
                </a>
            </li>

            <li><span>Facility</span></li>

            <li><span>Creation</span></li>

        </ol>

        <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fas fa-chevron-left"></i></a>
    </div>
</header>

<div class="row">
    <div class="col">
        <section class="card">
            <header class="card-header">
                <div class="card-actions">
                    <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                    <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
                </div>
                <button type="button" style="background-color:black; color:white" class="btn btn-lg" onclick="ShowNewForm()">New Facility</button>
                <button type="button" style="background-color:black; color:white" class="btn btn-lg" onclick="ShowNewForm()">Import Facility</button>
            </header>
            <div class="card-body">

                <table class="table table-bordered table-striped mb-0" id="datatable-tabletools">

                    <thead>
                        <tr>
                            <th> Action(s)</th>
                            @foreach (System.Reflection.PropertyInfo prop in Model.FacilityModel.GetType().GetProperties())
                            {

                                <th>  @Html.DisplayName(prop.Name) </th>


                            }
                        </tr>

                    </thead>

                    <tbody>
                        @if (Model.FacilityList != null)
                        {

                            foreach (var item in Model.FacilityList)
                            {
                        <tr>
                            <td><a href="#" style="color:blue" onclick="Edit(@item.ID)">Edit</a>||<a href="#" style="color:red" onclick="Delete(@item.ID)">Delete</a></td>

                            <td>@item.ID</td>
                            <td>@item.FacilityName</td>
                            <td>@item.Description</td>
                            <td>@item.FacilityType</td>
                            <td>@item.Longitude</td>
                            <td>@item.Latitude</td>
                            <td>@item.StartupDate</td>
                            <td>@item.FacilityStatus</td>
                            <td>@item.LocationName</td>
                            <td>@item.Terrain</td>
                            <td>@item.Capacity_per_day</td>
                            <td>@item.Operating_Capacity_gas</td>
                            <td>@item.Operating_Capacity_water</td>
                            <td>@item.StorageCapacity</td>
                            <td>@item.FluidType</td>
                            <td>@item.CommissionDate</td>
                            <td>@item.DPRPermitNumber</td>
                            <td>@item.DesignLife</td>
                            <td>@item.Waterdepth</td>
                            <td>@item.Comment</td>
                            <td>@item.DateCreated</td>
                            <td>@item.Createdby</td>
                            <td>@item.OperatorID</td>
                            <td>@item.Operator</td>                          

                        </tr>


                            }
                        }
                    </tbody>
                </table>
            </div>
        </section>
    </div>

</div>

<!-- Trigger the modal with a button -->
<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-xl">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" onclick="CloseForm()">&times;</button>
                <h4 style="float:left" class="modal-title">Facility Setup</h4>
            </div>

            <div class="modal-body">
                <form id="formdata">
                    <input type="text" hidden class="form-control" id="txtID" placeholder="" name="ID">

                    <div class="row form-group">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="col-form-label" for="formGroupExampleInput">Facility Name</label>

                                <input type="text" class="form-control" id="FacilityName" placeholder="" name="FacilityName">
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="col-form-label" for="formGroupExampleInput">Description</label>
                                <input type="text" class="form-control" id="Description" placeholder="" name="Description">

                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="col-form-label" for="formGroupExampleInput">Facility Type</label>
                                <input type="text" class="form-control" id="FacilityType" placeholder="" name="FacilityType">

                            </div>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="col-form-label" for="formGroupExampleInput">Longitude</label>

                                <input type="text" class="form-control" id="Longitude" placeholder="" name="Longitude">
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="col-form-label" for="formGroupExampleInput">Latitude</label>
                                <input type="text" class="form-control" id="Latitude" placeholder="" name="Latitude">

                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="col-form-label" for="formGroupExampleInput">StartupDate</label>
                                <input type="date" class="form-control" id="StartupDate" placeholder="" name="StartupDate">

                            </div>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="col-form-label" for="formGroupExampleInput">Facility Status</label>

                                <input type="text" class="form-control" id="FacilityStatus" placeholder="" name="FacilityStatus">
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="col-form-label" for="formGroupExampleInput">Location Name</label>
                                <input type="text" class="form-control" id="LocationName" placeholder="" name="LocationName">

                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="col-form-label" for="formGroupExampleInput">Terrain</label>
                                <input type="text" class="form-control" id="Terrain" placeholder="" name="Terrain">

                            </div>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="col-form-label" for="formGroupExampleInput">Capacity Per Day</label>

                                <input type="text" class="form-control" id="Capacity_per_day" placeholder="" name="Capacity_per_day">
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="col-form-label" for="formGroupExampleInput">Operating Capacity (gas)</label>
                                <input type="text" class="form-control" id="Operating_Capacity_gas" placeholder="" name="Operating_Capacity_gas">

                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="col-form-label" for="formGroupExampleInput">Operating Capacity (water)</label>
                                <input type="text" class="form-control" id="Operating_Capacity_water" placeholder="" name="Operating_Capacity_water">

                            </div>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="col-form-label" for="formGroupExampleInput">Storage Capacity</label>

                                <input type="text" class="form-control" id="StorageCapacity" placeholder="" name="StorageCapacity">
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="col-form-label" for="formGroupExampleInput">Fluid Type</label>
                                <input type="text" class="form-control" id="FluidType" placeholder="" name="FluidType">

                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="col-form-label" for="formGroupExampleInput">Commission Date</label>
                                <input type="date" class="form-control" id="CommissionDate" placeholder="" name="CommissionDate">

                            </div>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="col-form-label" for="formGroupExampleInput">DPR Permit Number</label>

                                <input type="text" class="form-control" id="DPRPermitNumber" placeholder="" name="DPRPermitNumber">
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="col-form-label" for="formGroupExampleInput">Design Life</label>
                                <input type="text" class="form-control" id="DesignLife" placeholder="" name="DesignLife">

                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="col-form-label" for="formGroupExampleInput">Water depth</label>
                                <input type="text" class="form-control" id="Waterdepth" placeholder="" name="Waterdepth">

                            </div>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="col-form-label" for="formGroupExampleInput">Comment</label>

                                <input type="text" class="form-control" id="Comment" placeholder="" name="Comment">
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="col-form-label" for="formGroupExampleInput">OperatorID</label>
                                <input type="text" class="form-control" id="OperatorID" placeholder="" name="OperatorID">

                            </div>
                        </div>
                        
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" style="background-color:black; color:white" data-dismiss="modal" onclick="Save()">Save Facility Information</button>
                <button type="button" class="btn btn-default" onclick="CloseForm()">Close</button>
            </div>
        </div>

    </div>
</div>
@section scripts{

    <script type="text/javascript">
        let dataList;
    $(document).ready(function () {
        dataList = @Html.Raw(Json.Serialize(Model.FacilityList));

    });
        function ShowNewForm() {
            document.getElementById("formdata").reset();

        $("#myModal").modal('show');
    }
        function CloseForm() {

            $("#myModal").modal('hide');
        }
        function Edit(id) {

            let objIndex = dataList.findIndex((obj => obj.id == id));

            if (objIndex != null) {
                var data = dataList.filter(obj => obj.id == id);
                console.log(data);

                if (data != null) {
                    $("#txtID").val(data[0].id);
                    $("#FacilityName").val(data[0].facilityName)
                    $("#Description").val(data[0].description)
                    $("#FacilityType").val(data[0].facilityType)
                    $("#Longitude").val(data[0].longitude)
                    $("#Latitude").val(data[0].latitude)
                    $("#StartupDate").val(data[0].startupDate)
                    $("#FacilityStatus").val(data[0].facilityStatus)
                    $("#LocationName").val(data[0].locationName)
                    $("#Terrain").val(data[0].terrain)
                    $("#Capacity_per_day").val(data[0].capacity_per_day)
                    $("#Operating_Capacity_gas").val(data[0].operating_Capacity_gas)
                    $("#Operating_Capacity_water").val(data[0].operating_Capacity_water)
                    $("#StorageCapacity").val(data[0].storageCapacity)
                    $("#FluidType").val(data[0].fluidType)
                    $("#CommissionDate").val(data[0].commissionDate)
                    $("#DPRPermitNumber").val(data[0].dprPermitNumber)
                    $("#DesignLife").val(data[0].designLife)
                    $("#Waterdepth").val(data[0].waterdepth)
                    $("#Comment").val(data[0].comment)

                    $("#OperatorID").val(data[0].operatorId)

                    $("#myModal").modal('show');
                }
            }

        }

        function Delete(id) {

            var data = dataList.filter(obj => obj.id == id);

            Swal.fire({
                title: 'Delete?',
                text: "Are you sure you want to delete " + data[0].businessName +" Field profile?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, Delete!'
            }).then((result) => {
                if (result.isConfirmed) {

                    $.ajax({
                        url: "/Facility/Delete",
                        type: "POST",
                        dataType: 'json',
                        contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                        data: { ID: id },
                        success: function (response) {

                            Swal.fire({
                                title: 'Request Successful',
                                text: response,
                                icon: 'success',
                                //showCancelButton: true,
                                confirmButtonColor: '#3085d6',
                                // cancelButtonColor: '#d33',
                                confirmButtonText: 'OK!'
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    location.reload();
                                }
                            })

                        }
                    });

                }
            })
        }

    function Save() {

        var data = $("#formdata").serialize();

        $.ajax({
            url: "/Facility/Save",
            type: "POST",
            dataType: 'json',
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
            data: data,
            success: function (response) {
                $("#myModal").modal('hide');
                Swal.fire({
                    title: 'Request Successful',
                    text: response,
                    icon: 'success',
                    //showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                   // cancelButtonColor: '#d33',
                    confirmButtonText: 'OK!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        location.reload();
                    }
                })

            }
        });
    }

    </script>
}